[flake8]
# match settings for black code formatting
max-line-length = 88
# ignore all PEP8 errors, warnings from flake8: E,W
# black will handle all of that
# H202 needed in testing
# F811 needed in fixture testing
show-source = True
ignore = E,W,H202,F811
exclude = .venv,.git,.tox,dist,doc,*lib/python*,*egg,build,venv,*release.json.py,*.xml,stubs/*
